	"version": "0.2.0",
	"configurations": [
		{
			"name": "Compile (tsc)",
			"preLaunchTask": "npm: compile",
			"type": "node-terminal",
			"request": "launch",
			"command": "exit"
		},
		
		{
			"type": "node",
			"request": "launch",
			"name": "Start (Compile)",
			"program": "${workspaceFolder}/src/index.ts",
			"runtimeArgs": [
				"--experimental-json-modules",
				"--experimental-modules"
			],
			"preLaunchTask": "npm: compile",
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Start (No Compile)",
			"runtimeArgs": [
				"--experimental-json-modules",
				"--experimental-modules"
			],
			"program": "${workspaceFolder}/out/src/index.js",
		}
	]
}