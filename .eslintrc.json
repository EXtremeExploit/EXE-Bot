{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            "tab",
            {
                "MemberExpression": 1,
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "warn",
            {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": false,
                "caughtErrors": "all"
            }
        ],
        "no-console": "off",
        "comma-spacing":[
            "error",
            {
                "after": true
            }
        ],
        "arrow-parens":[
            "error"
        ],
        "no-debugger": [
            "off"
        ]
    }
}